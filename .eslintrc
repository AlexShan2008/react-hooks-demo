{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react", "plugin:jsx-a11y/recommended"],
  "plugins": [
    // ...
    "react-hooks",
    "jsx-a11y"
  ],
  "rules": {
    // ...
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-useless-catch": 0
  }
}
